# Move this file to .git/hooks/ to ensure the GitHub check action passes
# The tests are not ran with this since they require specific configuration
# We use CSpell to check spelling: https://cspell.org/docs/installation

export RUST_BACKTRACE=1
export RUSTDOCFLAGS=-Dwarnings

cargo build

rustup toolchain install nightly
rustup component add rustfmt --toolchain nightly
cargo +nightly fmt --check

cargo doc --no-deps
cargo clippy -- -D warnings

cspell lint --gitignore --fail-fast "**"